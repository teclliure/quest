<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content=" minimum-scale=1.0, maximum-scale=1.0, width=device-width; user-scalable=no">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}{% endblock %} | Quest Devel</title>

    {% block stylesheets %}
    {% stylesheets
    '@TeclliureUserBundle/Resources/public/bootstrap/css/bootstrap.min.css'
    '@TeclliureUserBundle/Resources/public/bootstrap/css/bootstrap-responsive.min.css'
    '@TeclliureUserBundle/Resources/public/css/style.css'
    'bundles/sonatajquery/themes/flick/jquery-ui-1.8.16.custom.css'
    output='css/style_common.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" media="screen" type="text/css"/>
    {% endstylesheets %}
    {% endblock %}


    {% block top_javascripts %}
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% endblock %}
</head>
<body>
<script type="text/javascript">
    basePath = '{{app.request.baseurl}}';
</script>
<div class="container">
    <div id="top" class="row">
        <div class="span12">
            <div id="language_selector" class="pull-right">
                {% block language_selector %}
                {% endblock %}
            </div>
        </div>
    </div>

    <div class="row">
        <div id="banner" class="span12">
            <div class="hero-unit">
                <h1 id="logo-text"><a href="{{ path('home') }}">Quest Demo</a></h1>
                {% if app.user %}
                    <div style="float: right">Hi {{ app.user.username }} <a href="{{ path('logout') }}"><span class="btn btn-danger">Logout</span></a></div>
                {% endif %}
                <p id="slogan">Symfony2 Quest Application</p>
            </div>
        </div>



    </div>

    <div class="row">
        {% block navbar %}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="navbar span12">
                    <div class="navbar-inner" >
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <div class="nav-collapse collapse navbar-responsive-collapse">
                            <a class="brand" href="#">Admin</a>
                            <ul class="nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Questionaries' | trans }}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('questionary') }}">{{ 'List' | trans }}</a></li>
                                        <li><a href="{{ path('questionary_new') }}">{{ 'Add questionary' | trans }}</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Patients' | trans }}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('admin_teclliure_patient_patient_list') }}">{{ 'List' | trans }}</a></li>
                                        <li><a href="{{ path('admin_teclliure_patient_patient_create') }}">{{ 'Add patient' | trans }}</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Docs' | trans }}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">{{ 'List' | trans }}</a></li>
                                        <li><a href="#">{{ 'Add doc' | trans }}</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Categories and subcategories' | trans }}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-header">{{ 'Categories' | trans }}</li>
                                        <li><a href="{{ path('admin_teclliure_category_category_list') }}">{{ 'Categories list' | trans }}</a></li>
                                        <li><a href="{{ path('admin_teclliure_category_category_create') }}">{{ 'Add category' | trans }}</a></li>
                                        <li class="divider"></li>
                                        <li class="nav-header">{{ 'Subcategories' | trans }}</li>
                                        <li><a href="{{ path('admin_teclliure_category_subcategory_list') }}">{{ 'Subcategories list' | trans }}</a></li>
                                        <li><a href="{{ path('admin_teclliure_category_subcategory_create') }}">{{ 'Add subcategory' | trans }}</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'Users' | trans }}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('admin_teclliure_user_user_list')  }}">{{ 'List' | trans }}</a></li>
                                        <li><a href="{{ path('admin_teclliure_user_user_create') }}">{{ 'Add user' | trans }}</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div><!-- /.nav-collapse -->
                    </div><!-- /navbar-inner -->
                </div>
            {% endif %}
        {% endblock %}
    </div>

    <div class="row">
        {% if app.user %}
        {% block breadcrumb %}
            <div id="breadcrumb" class="span12">
                <ul class="breadcrumb boxed">
                    <li><a href="">Bread1</a></li>
                    <li><a href="">Bread2</a></li>
                </ul>
            </div>
            {#
            {% set currentItem = knp_menu_get('main').currentItem %}
            {% if currentItem %}
            <div id="breadcrumb" class="span12">
                <ul class="breadcrumb boxed">
                    {% for title, url in currentItem.breadcrumbsArray %}
                        <li><a href="{{url}}">{{ title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            #}
        {% endblock %}
        {% endif %}
    </div>



    <div  class="row" >
        <div id="content-container" class="span12 boxed">
            <div class="row">
                {% include '::flashbag.html.twig' %}

                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>

    <hr style="margin-left: 30px;"/>

    <div id="footer" class="row" style="margin-left: 30px;">
        {% block footer %}
            <div id="menu-service">
                {# {{ knp_menu_render('service') }} #}
            </div>
            <div class="span12">
                <p>Powered by <a href="http://symfony.com/">Symfony</a></p>
            </div>
        {% endblock %}
    </div>
</div>
{% block javascripts %}
    {% javascripts
    '@TeclliureUserBundle/Resources/public/js/jquery-1.8.2.min.js'
    '@TeclliureUserBundle/Resources/public/bootstrap/js/bootstrap.min.js'
    '@TeclliureUserBundle/Resources/public/bootstrap/js/bootbox.min.js'
    'bundles/sonatajquery/jquery-ui-1.8.23.js'
    'bundles/sonatajquery/jquery-ui-i18n.js'
    output='js/footer_js.js' %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>