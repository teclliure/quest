{% extends '::one_column.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/teclliurequestion/js/questionForm.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/teclliureuser/js/jquery-ui-1.9.1.custom.min.js') }}" type="text/javascript"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/teclliureuser/css/south-street/jquery-ui-1.9.1.custom.min.css') }}">
{% endblock %}

{% block title %}{{ "Person Show" | trans }}{% endblock %}

{% block inner_content %}
<div style="float: left"><a class="btn btn-danger btn-sonata-action-element" href="{{ path('patient_delete', { 'id': entity.id }) }}">{{ 'Delete patient' | trans }}</a></div>
<div style="float: right">
    <div class="sonata-actions">
        <a class="btn btn-primary btn-sonata-action-element" href="{{ path('questionary_patient_new', { 'id': entity.id }) }}">{{ 'New questionary' | trans }}</a>
        <a class="btn sonata-action-element" href="{{ path('home') }}">
            {{ 'Back to the list' | trans }}
        </a>
    </div>
</div>
<br />
<br />
<legend>
    {{ 'Person' | trans }} {{ entity.name }}
</legend>

<ul class="nav nav-tabs" id="myTab">
  <li class="active"><a href="#show" data-toggle="tab">{{ 'Show' | trans }}</a></li>
  <li><a href="#edit" data-toggle="tab">{{ 'Edit' | trans }}</a></li>
  <li><a href="#questionaries" data-toggle="tab">{{ 'Questionaries' | trans }}</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="show">
      <table class="record_properties table table-bordered table-striped">
          <tbody>
          <tr>
              <th>{{ 'Identification' | trans }}</th>
              <td>{{ entity.identification }}</td>
          </tr>
          <tr>
              <th>{{ 'Email' | trans }}</th>
              <td>{{ entity.email }}</td>
          </tr>
          <tr>
              <th>{{ 'Address' | trans }}</th>
              <td>{{ entity.address }}</td>
          </tr>
          <tr>
              <th>{{ 'Phone' | trans }}</th>
              <td>{{ entity.phone }}</td>
          </tr>
          <tr>
              <th>{{ 'Birth date' | trans }}</th>
              <td>{{ entity.birthDate | date('d-m-Y') }}</td>
          </tr>
          <tr>
              <th>{{ 'Notes' | trans }}</th>
              <td>{{ entity.notes }}</td>
          </tr>
          <tr>
              <th>{{ 'Created' | trans }}</th>
              <td>{{ entity.created|date('d-m-Y H:i:s') }}</td>
          </tr>
          <tr>
              <th>{{ 'Updated' | trans }}</th>
              <td>{{ entity.updated|date('d-m-Y H:i:s') }}</td>
          </tr>
          <tr>
              <th>{{ 'Active' | trans }}</th>
              <td>
                  {% if entity.active %}
                      <img src="{{ asset('bundles/sonataadmin/famfamfam/accept.png') }}" alt="{%- trans from 'SonataAdminBundle' %}label_type_yes{% endtrans -%}" />
                  {% else %}
                      <img src="{{ asset('bundles/sonataadmin/famfamfam/exclamation.png') }}" alt="{%- trans from 'SonataAdminBundle' %}label_type_no{% endtrans -%}" />
                  {% endif %}
              </td>
          </tr>
          </tbody>
      </table>

      <div class="well form-actions">
          <a class="btn btn-primary" href="{{ path('questionary_edit', { 'id': entity.id }) }}">
              {{ 'Edit' | trans }}
          </a>
      </div>
    </div>

    <div class="tab-pane" id="edit">
        {% include 'TeclliurePatientBundle:Patient:editForm.html.twig' %}
    </div>

    <div class="tab-pane" id="questionaries">
        {% include 'TeclliurePatientBundle:Patient:questionaries.html.twig' %}
    </div>
</div>



{% endblock %}