{% extends '::one_column.html.twig' %}

{% block title %}{{ "Questionary Show" | trans }}{% endblock %}

{% block inner_content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ entity.active }}</td>
        </tr>
    </tbody>
</table>
<div class="btn-toolbar">
    <div class="btn-group">
        <a class="btn btn-mini" href="{{ path('questionary') }}">
            Back to the list
        </a>
        <a class="btn btn-mini" href="{{ path('questionary_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </div>
    <div class="btn-group">
        <form style="margin: 0" action="{{ path('questionary_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-mini btn-danger" type="submit">Delete</button>
        </form>
    </div>
</div>
{% endblock %}